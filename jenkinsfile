pipeline {
    agent any

    stages {
        stage('Build Image') {
            steps {
                script {
                    //Baixando dockerfile
                    sh 'wget https://github.com/doug260188/project_esus/tree/master/Dockerfile'

                    //Construindo imagem
                    sh 'docker build -t doug260188/ubuntu:latest .'
                }
            }
        

        }

        stage('Run Container') {
            steps {
                // Baixando imagem
                sh 'wget https://github.com/doug260188/project_esus/tree/main/docker-compose.yml'

                //Subindo container
                sh 'docker-compose up -d'
            }
        }
    }
                
}
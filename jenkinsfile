pipeline {
    agent any

    stages {
        stage('Build Image') {
            steps {
                script {
                    //Baixando dockerfile
                    sh 'wget https://github.com/doug260188/project_esus/blob/master/dockerfile'

                    //Construindo imagem
                    sh 'docker build -t doug260188/ubuntu:latest .'
                }
            }
        

        }

        stage('Run Container') {
            steps {
                // Baixando imagem
                sh 'wget https://github.com/doug260188/project_esus/blob/master/docker-compose.yml'

                //Subindo container
                sh 'docker-compose up -d'
                sh 'rm docker-compose.yml.*'
            }
        }
    }
                
}